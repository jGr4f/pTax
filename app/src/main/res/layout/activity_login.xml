<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mask_group"
    tools:context="View.Login">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/group_3021" />

    <EditText
        android:id="@+id/Usuario_edittext"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:autofillHints="username"
        android:inputType="text"
        android:background="@drawable/transparent_field"
        android:hint="Usuario"
        android:paddingStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/Contraseña_edittext"
            android:layout_width="331dp"
            android:layout_height="56dp"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:background="@drawable/transparent_field"
            android:hint="Contraseña"
            android:paddingStart="15dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/OlvidarContra_button"
            android:layout_width="wrap_content"
            android:layout_height="48sp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/urbanist_semibold"
            android:text="¿Olvidaste tu contraseña?"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_alignEnd="@id/Contraseña_edittext"/>

    </RelativeLayout>

    <Button
        android:id="@+id/IniciarSesion_button"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_login"
        android:fontFamily="@font/urbanist_semibold"
        android:gravity="center"
        android:text="@string/iniciar_sesión"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/continuarCon_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O continuar con"
        android:fontFamily="@font/urbanist_semibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/conectarGoogle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/google_button_login"
            android:gravity="center"
            android:fontFamily="@font/urbanist_semibold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:contentDescription="Botón Google"/>

        <Button
            android:id="@+id/conectarFb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/facebook_button_login"
            android:fontFamily="@font/urbanist_semibold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:contentDescription="Botón Facebook"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/noTienesCuenta_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:text="¿No tienes una cuenta?"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/urbanist_semibold"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/Registro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Botón Facebook"
            android:fontFamily="@font/urbanist_semibold"
            android:textAlignment="textStart"
            android:text=" Registrate"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>